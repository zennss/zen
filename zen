<body>
  <h1>C:\Windows\System32\ipconfig</h1>
  <div id="ipinfo">Loading your IP configuration...</div>

  <div class="footer">Made by zen</div> 

  <script>
    fetch("https://ipinfo.io/json")
      .then(response => response.json())
      .then(data => {
        const info = `
Windows IP Configuration


Ethernet adapter Ethernet:

   IPv4 Address. . . . . . . . . . . : ${data.ip}
   Location . . . . . . . . . . . .  : ${data.city}, ${data.region}, ${data.country}
   ISP . . . . . . . . . . . . . . . : ${data.org}
`;
        document.getElementById("ipinfo").textContent = info;
      })
      .catch(() => {
        document.getElementById("ipinfo").textContent = "Failed to load IP info.";
      });
  </script>
</body>
